{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Variant",
    "description": "CTTV variant model - an array of dbSNP, European structural variant (esv) or NCBI structural variant (nsv)",
    "type": "object",
    "version": "1.2.1",
    "allOf": [
        {
            "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/base.json"
        },
        {
            "properties": {
                "id": {
                    "type": "array",
                    "items": {
                        "description": "An array of variant identifiers",
                        "type": "string",
                        "pattern": "^http://identifiers.org/dbsnp/rs[0-9]+|esv[0-9]+|nsv[0-9]+$"
                    }
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "snp single",
                        "snp snp interaction",
                        "structural variant"
                    ]
                }
            }
        }
    ],
    "properties": {
        "id": {},
        "type": {}
    },
    "required": [
        "id",
        "type"
    ],
    "additionalProperties": false
}
