{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Drug",
  "description": "OpenTargets drug model",
  "type": "object",
  "version": "1.2.8",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/opentargets/json_schema/master/src/bioentity/base.json"
    },
    {
      "properties": {
        "id": {
          "type" : "string",
          "description": "A ChEMBL or internal drug identifier",
          "pattern": "^http://identifiers.org/chembl.compound/CHEMBL[0-9]+$|^http://private/.+$"
        },
        "molecule_name": {
          "type": "string"
        },
        "molecule_type": {
          "type": "string"
        },
        "max_phase_for_all_diseases": {
          "type": "object",
          "$ref": "https://raw.githubusercontent.com/opentargets/json_schema/master/src/evidence/drug/diseasephase.json"
        },
        "withdrawn_status": {
          "type": "boolean"
        },
        "withdrawn_country": {
          "type": "string"
        },
        "withdrawn_reason": {
          "type": "string"
        },
        "withdrawn_year": {
          "type": "number"
        }
      }
    }
  ],
  "properties": {
    "id": {},
    "molecule_name": {},
    "molecule_type": {},
    "max_phase_for_all_diseases": {},
    "withdrawn_status": {},
    "withdrawn_country": {},
    "withdrawn_reason": {},
    "withdrawn_year": {}
  },
  "required": [
    "id",
    "molecule_name",
    "molecule_type",
    "withdrawn_status"
  ],
  "additionalProperties": false
}
