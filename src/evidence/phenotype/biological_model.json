{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Biological model",
  "description": "Evidence linking human target to animal target",
  "type": "object",
  "version": "1.2.1",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/base.json"
    },
    {
      "properties": {
        "evidence_codes": {
          "type": "array",
          "description": "An array of evidence codes",
          "items": {
            "type": "string",
            "enum": [
              "http://identifiers.org/eco/ECO:0000179"
            ]
          },
          "minItems": 1
        },
        "model_gene_id": {
          "type": "string",
          "description": "Biological model Ensembl gene identifier (ortholog)",
          "pattern": "^http://identifiers.org/ensembl/ENS[A-Z]{0,3}G[0-9]{4,}$"
        },
        "model_id": {
          "type": "string",
          "description": "Internal identifier for the biological model"
        },        
        "allelic_composition": {
          "type": "string",
          "description": "Animal model allelic composition"
        },
        "genetic_background": {
          "type": "string",
          "description": "Genetic background of the biological model that influences phenotypes"
        },
        "allele_ids": {
          "type": "string",
          "description": "List of allele identifiers for this model separated by |"
        },
        "zygosity": {
            "type": "string",
            "enum": [
              "hom",
              "het",
              "hem",
              "oth"
            ]
          },
          "species": {
            "type": "string",
            "enum": [
              "mouse",
              "human",
              "rat",
              "zebrafish",
              "dog"
            ]
          },       
        "phenotypes": {
          "type" : "array",
          "description": "List of phenotypes for this model",
          "items": {          
            "type": "object",
            "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/phenotype.json"
          },
          "minItems": 1
        },
        "urls": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/linkout/linkout.json"
          }
        }
      }
    }
  ],
  "properties": {
    "resource_score": {},
    "provenance_type": {},
    "is_associated": {},
    "date_asserted": {},
    "evidence_codes": {},
    "urls": {}
  },
  "required": [
    "resource_score",
    "provenance_type",
    "is_associated",
    "date_asserted",
    "evidence_codes",
    "model_id",
    "model_gene_id",
    "genetic_background",
    "allele_ids",
    "allelic_composition",
    "zygosity",
    "phenotypes",
    "species"
  ],
  "additionalProperties": false
}
