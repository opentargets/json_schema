{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "snp_gwas_disease_evidence",
  "description": "Evidence linking SNP to disease in a GWAS study",
  "type": "object",
  "version": "1.2.8",
  "allOf": [
    {
      "$ref": "../base.json"
    },
    {
      "properties": {
        "allOf": {
          "$ref": "../base.json"
        },
        "clinical_significance": {
          "type": "string",
	  "enum": [
              "Pathogenic" ,
              "Likely pathogenic" ,
	      "protective",
	      "association",
	      "risk_factor",
	      "Affects",
	      "drug response"
          ]
        },
        "gwas_panel_resolution": {
          "description": "Panel resolution of GWAS study",
          "type": "number",
          "minimum": 0,
          "exclusiveMinimum": true
        },
        "gwas_sample_size": {
          "description": "Sample size of GWAS study",
          "type": "number",
          "minimum": 0,
          "exclusiveMinimum": true
        },
        "evidence_codes": {
          "type": "array",
          "description": "An array of evidence codes",
          "items": {
            "type": "string",
            "enum": [
              "http://identifiers.org/eco/GWAS",
	      "http://identifiers.org/eco/PheWAS",
              "http://purl.obolibrary.org/obo/ECO_0000205"
            ]
          },
          "minItems": 1
        },
        "urls": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "../linkout/linkout.json"
          }
        }
      }
    }
  ],
  "properties": {
    "clinical_significance": {},
    "resource_score": {},
    "unique_experiment_reference": {},
    "provenance_type": {},
    "is_associated": {},
    "date_asserted": {},
    "evidence_codes": {},
    "urls": {},
    "gwas_panel_resolution": {},
    "gwas_sample_size": {}
  },
  "required": [
    "unique_experiment_reference",
    "resource_score",
    "provenance_type",
    "is_associated",
    "date_asserted",
    "evidence_codes"
  ],
  "additionalProperties": false,
  "import_remote_schemas": [
    {
      "$ref": "../association_score/method.json"
    },
    {
      "$ref": "../association_score/probability.json"
    },
    {
      "$ref": "../association_score/summed_total.json"
    },
    {
      "$ref": "../association_score/pvalue.json"
    },
    {
      "$ref": "../association_score/rank.json"
    },
    {
      "$ref": "../association_score/base.json"
    }
  ]
}
