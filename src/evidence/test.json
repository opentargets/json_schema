{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Evidence_Base",
  "description": "Base schema for CTTV evidence",
  "version": "1.2.1",
  "type": "object",
  "id": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/base.json",
  "properties": {
    "unique_experiment_reference": {
      "type": "string",
      "description": "A unique experiment identifer or literature reference that uniquely identifies the study in your database",
      "pattern": "http://europepmc.org/abstract/MED/[0-9]+|http://europepmc.org/articles/PMC[0-9]{4,}|STUDYID_.+$"
    },
    "is_associated": {
      "type": "boolean"
    },
    "date_asserted": {
      "type": "string",
      "format": "date-time"
    },
    "association_score": {
      "type": "object",
      "oneOf": [
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/association_score/pvalue.json"
        },
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/association_score/probability.json"
        },
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/association_score/rank.json"
        },
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/association_score/summed_total.json"
        }
      ]
    },
    "provenance_type": {
      "type": "object",
      "properties": {
        "expert": {
          "type": "object",
          "properties": {
            "statement": {
              "type": "string"
            },
            "author": {
              "type": "object",
              "properties": {
                "organization": {
                  "type": "string"
                },
                "email": {
                  "type": "string",
                  "format": "email"
                },
                "name": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            "status": {
              "type": "boolean"
            }
          },
          "required": [
            "status"
          ],
          "additionalProperties": false
        },
        "literature": {
          "type": "object",
          "properties": {
            "references": {
              "type": "array",
              "items": {
                "type": "object",
                "$ref": "#/definitions/single_lit_reference"
              },
              "minItems": 1,
              "uniqueItems": true
            }
          },
          "required": [
            "references"
          ],
          "additionalProperties": false
        },
        "database": {
          "type": "object",
          "properties": {
            "dbxref": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Please provide the original DB name"
                },
                "url": {
                  "type": "string",
                  "format": "uri",
                  "description": "Please provide a pointer to the original resource: e.g. http://identifiers.org/orphanet/93298"
                },
                "version": {
                  "type": "string"
                }
              },
              "additionalProperties": false,
              "required": [
                "id",
                "version"
              ]
            },
            "id": {
              "type": "string"
            },
            "version": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": [
            "id",
            "version"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "definitions": {
    "single_lit_reference": {
      "type": "object",
      "id": "#single_lit_reference",
      "properties": {
        "lit_id": {
          "type": "string",
          "description": "Note for pubmed identifiers, use the URI http://europepmc.org/abstract/MED/[0-9]+",
          "pattern": "http://europepmc.org/abstract/MED/[0-9]+|http://europepmc.org/articles/PMC[0-9]{4,}$"
        },
        "rank": {
          "type": "object",
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/association_score/rank.json"
        },
        "mined_sentences": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "sentence": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string"
                  },
                  "section": {
                    "type": "string",
                    "enum": [
                      "title",
                      "abstract",
                      "introduction_and_background",
                      "results",
                      "discussion",
                      "case_study",
                      "conclusion_and_future_work",
                      "appendix",
                      "figure",
                      "table",
                      "other"
                    ],
                    "description": "Section of the article in which this sentence appears"
                  },
                  "t_start": {
                    "type": "number",
                    "minValue": 0,
                    "description": "Start co-ordinate of target (protein/gene) in text"
                  },
                  "t_end": {
                    "type": "number",
                    "minValue": 0,
                    "description": "End co-ordinate of target (protein/gene) in text"
                  },
                  "d_start": {
                    "type": "number",
                    "minValue": 0,
                    "description": "Start co-ordinate of disease name in text"
                  },
                  "d_end": {
                    "type": "number",
                    "minValue": 0,
                    "description": "End co-ordinate of disease name in text"
                  }
                },
                "additionalProperties": false,
                "required": [
                  "text",
                  "section"
                ]
              }
            }
          },
          "minItems": 1
        }
      },
      "required": [
        "lit_id",
        "mined_sentences"
      ],
      "additionalProperties": false
    }
  }
}